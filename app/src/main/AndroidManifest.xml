<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.just_app.obuchaika"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:name="com.just_app.obuchaika.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.just_app.obuchaika.ui.activity.StartMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.just_app.obuchaika.ui.activity.Activity_menu"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.just_app.obuchaika.ui.activity.Activity_test"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.just_app.obuchaika.ui.activity.Activity_finish"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>
