<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_fon">

    <TextView
        android:id="@+id/textViewTestWord"
        style="@style/information_label"
        android:layout_above="@+id/linearLayout3"
        android:textSize="40sp"
        tools:text="Текст вопроса" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_1"
                style="@style/test_image_question"
                android:contentDescription="@string/option_1"
                tools:src="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/button_2"
                style="@style/test_image_question"
                android:contentDescription="@string/option_2"
                tools:src="@android:drawable/btn_star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_3"
                style="@style/test_image_question"
                android:contentDescription="@string/option_3"
                tools:src="@android:drawable/btn_star" />

            <ImageView
                android:id="@+id/button_4"
                style="@style/test_image_question"
                android:contentDescription="@string/option_4"
                tools:src="@android:drawable/btn_star" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/scoreTextView"
            style="@style/test_score_question"
            android:text="@string/number_of_stars"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/starView"
            style="@style/test_image_score"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/stars"
            android:src="@drawable/estrellaua" />

        <ImageButton
            android:id="@+id/next"
            style="@style/next_button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/next" />
    </RelativeLayout>
</RelativeLayout>