<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/toast_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/toast_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/helper"
        android:layout_toStartOf="@+id/toast_text"
        android:layout_toLeftOf="@+id/toast_text"/>

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/toast_view"/>

</RelativeLayout>